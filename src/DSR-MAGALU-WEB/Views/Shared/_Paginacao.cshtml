@model DSR_MAGALU_BUSINESS.Pagination.PaginacaoInformacoes

@{
    var paginaInicial = 0;
    if (Model.Pagina - 2 < 1)
    {
        paginaInicial = 1;
    }
    else
    {
        paginaInicial = Model.Pagina - 2;
    }

    if (Model.Pagina > Model.UltimaPagina - 2)
    {
        paginaInicial = Math.Max(1, Model.UltimaPagina - 4);
    }

    var paginaFinal = 0;
    if (Model.Pagina + 2 > Model.UltimaPagina)
    {
        paginaFinal = Model.UltimaPagina;
    }
    else
    {
        paginaFinal = Model.Pagina + 2;
    }

    if (Model.Pagina < 3)
    {
        paginaFinal = Math.Min(Model.UltimaPagina, 6 - paginaInicial);
    }
}
<style>
    .footer-paginacao {
        display: flex;
        justify-content: space-between;
        padding: 10px 0 10px 0;
    }

    .paginacao {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }

        .paginacao > p {
            margin-top: -7px;
        }

</style>
<div class="footer-paginacao">
    <div class="tamanho-pagina">
        <div class="btn-group">
            <button type="button" class="btn btn-primary btn-sm">@Model.TamanhoPagina</button>
            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split btn-sm" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item small a-paginacao" href="?pagina=1&tamanhoPagina=5">5</a></li>
                <li><a class="dropdown-item small a-paginacao" href="?pagina=1&tamanhoPagina=10">10</a></li>
                <li><a class="dropdown-item small a-paginacao" href="?pagina=1&tamanhoPagina=20">20</a></li>
                <li><a class="dropdown-item small a-paginacao" href="?pagina=1&tamanhoPagina=50">50</a></li>
                <li><a class="dropdown-item small a-paginacao" href="?pagina=1&tamanhoPagina=100">100</a></li>
            </ul>
        </div>
    </div>
    <div class="paginacao">
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm">

                @if (Model.Pagina > 1)
                {
                    <li class="page-item first">
                        <a class="page-link a-paginacao" href="?pagina=1&tamanhoPagina=@Model.TamanhoPagina"><i class="bx bx-chevrons-left"></i></a>
                    </li>

                    <li class="page-item prev">
                        <a class="page-link a-paginacao" href="?pagina=@(Model.Pagina-1)&tamanhoPagina=@Model.TamanhoPagina"><i class="bx bx-chevron-left"></i></a>
                    </li>
                }

                @for (int pagina = paginaInicial; pagina <= paginaFinal; pagina++)
                {
                    <li class="page-item @(pagina == Model.Pagina ? "active" : string.Empty)">
                        <a class="page-link a-paginacao" href="?pagina=@pagina&tamanhoPagina=@Model.TamanhoPagina">@pagina</a>
                    </li>
                }

                @if (Model.Pagina < Model.UltimaPagina)
                {
                    <li class="page-item next">
                        <a class="page-link a-paginacao" href="?pagina=@(Model.Pagina+1)&tamanhoPagina=@Model.TamanhoPagina"><i class="bx bx-chevron-right"></i></a>
                    </li>

                    <li class="page-item last">
                        <a class="page-link a-paginacao" href="?pagina=@Model.UltimaPagina&tamanhoPagina=@Model.TamanhoPagina"><i class="bx bx-chevrons-right"></i></a>
                    </li>
                }
            </ul>
        </nav>
        <p class="small">Mostrando <strong>@Model.TotalItensVisiveis</strong> de <strong>@Model.QuantidadeTotalItens</strong> itens.</p>
    </div>
</div>
